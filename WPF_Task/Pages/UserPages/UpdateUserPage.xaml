        <TextBox x:Name="TextBoxPhoneNumber" HorizontalAlignment="Center" Margin="0,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBox x:Name="TextBoxEmail" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="18"/>
        <TextBox x:Name="TextBoxPassword" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18" Margin="0,261,0,0"/>
        <ComboBox x:Name="ComboBoxRole" HorizontalAlignment="Center" Margin="0,323,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Имя:" HorizontalAlignment="Left" Margin="303,71,0,0" VerticalAlignment="Top" Width="37" Height="25"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="276,123,0,0" VerticalAlignment="Top" Width="64" Height="25"/>
